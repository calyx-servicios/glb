<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="view_company_form_oilnet_credencials" model="ir.ui.view">
    <field name="name">res.company.oilnet.credencials</field>
    <field name="model">res.company</field>
    <field name="inherit_id" ref="base.view_company_form"/>
    <field name="arch" type="xml">

      <xpath expr="//group[@name='social_media']" position="after">
        <group name="oilnet_credencials" string="Oilnet Credencials">
            <field name="oilnet_url" string="Url"/>
            <field name="oilnet_user" string="User"/>
            <field name="oilnet_password" string="Password"/>
              <button
                name="oilnet_login"
                string="Log in"
                type="object"
                class="oe_highlight"
              />
            <field name="oilnet_auth" string="Auth" invisible="1"/>
            <field name="oilnet_logged" string="Logged In"/>
          </group>
      </xpath>

    </field>
  </record>

</odoo>

