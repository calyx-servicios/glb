<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="view_move_oilnet_form" model="ir.ui.view">
    <field name="name">account.move.oilnet.form</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">

      <xpath expr="//group[@name='payments_info_group']" position="after">
        <group name="note_status" string="Notes Status">
            <field name="oilnet_id" string="Oilnet ID" />
            <field name="commercial" string="Commercial Approved" />
            <field name="logistic" string="Logistic Approved" />
            <field name="financial" string="Financial Approved" />
        </group>
      </xpath>
      
    </field>
  </record>

</odoo>